    .skip-link:focus {
      left: 1rem;
      top: 1rem;
      width: auto;
      height: auto;
      padding: .5rem .75rem;
      background: var(--secondary);
      color: #111827;
      border-radius: .5rem;
      z-index: 1000;
    }

    @media (prefers-reduced-motion: no-preference) {
      .reveal {
        opacity: 0;
        transform: translateY(14px);
        transition: opacity .7s ease, transform .7s ease;
        will-change: opacity, transform;
      }

      .reveal.show {
        opacity: 1;
        transform: translateY(0);
      }
    }
