        </div>
        <div class="reveal show">
          <h4 class="font-semibold text-gray-900">Kontak</h4>
          <ul class="mt-2 text-sm text-gray-600 space-y-1">
            <li>Email: <a href="mailto:lenterazyland1@gmail.com">lenterazyland1@gmail.com</a></li>
            <li>Alamat: Surakarta</li>
          </ul>
        </div>
      </div>
      <div class="py-4 border-t border-gray-100 text-xs text-gray-500 flex items-center justify-between">
        <span>© <span id="year"></span> Lentera Zyland • All rights reserved.</span>
      </div>
    </div>
  </footer>

  <!-- Script -->
  <script>
    // Tahun footer
    document.getElementById('year').textContent = new Date().getFullYear();

    // Mobile menu
    const menuBtn = document.getElementById('menuBtn');
    const mobileMenu = document.getElementById('mobileMenu');
    if(menuBtn){
      menuBtn.addEventListener('click', () => {
        const expanded = menuBtn.getAttribute('aria-expanded') === 'true';
        menuBtn.setAttribute('aria-expanded', String(!expanded));
        mobileMenu.classList.toggle('hidden');
      });
    }

    // =======================
    // DATA BERITA (revisi)
    // =======================
    // NOTE: Ganti 'image' ke foto asli jika sudah ada.
    const NEWS = [
      // Koordinasi (awal rangkaian)
      {
        title:"Koordinasi & Pembekalan Internal Biromawa",
        date:"2025-02-05",
        category:"Koordinasi",
        excerpt:"Penyamaan visi, timeline, dan SOP pelaporan untuk kelancaran Program Lentera Zyland.",
        image:"/img/berita-biromawa.jpg",
        slug:"koordinasi-dan-pembekalan-internal-biromawa"
      },
      {
        title:"Koordinasi dengan Kepala Sekolah SDN Wiropaten",
        date:"2025-02-12",
        category:"Koordinasi",
        excerpt:"Pemetaan kebutuhan sekolah, penjadwalan sesi, serta penunjukan guru pengampu.",
        image:"/img/berita-koordinasi-sekolah.jpg",
        slug:"koordinasi-dengan-kepala-sekolah-sdn-wiropaten"
      },

      // Sosialisasi
      {
        title:"Sosialisasi Program ke Guru SDN Wiropaten Surakarta",
        date:"2025-02-20",
        category:"Sosialisasi",
        excerpt:"Pengenalan konsep Computational Thinking, alur program, dan peran guru di kelas.",
        image:"/img/berita-sosialisasi-guru.jpg",
        slug:"sosialisasi-program-ke-guru-sdn-wiropaten"
      },
      {
        title:"Sosialisasi Wali Murid & Penyerahan Modul Monitoring",
        date:"2025-03-02",
        category:"Sosialisasi",
        excerpt:"Menghubungkan rumah–sekolah melalui modul pantau perkembangan literasi & numerasi.",
        image:"/img/berita-sosialisasi-walimurid.jpg",
        slug:"sosialisasi-wali-murid-dan-penyerahan-modul-monitoring"
      },

      // Administrasi / Legal
      {
        title:"Persetujuan Wali Murid untuk Publikasi",
        date:"2025-03-03",
        category:"Administrasi",
        excerpt:"Pengumpulan informed consent publikasi foto/video kegiatan pembelajaran.",
        image:"/img/berita-consent.jpg",
        slug:"persetujuan-wali-murid-untuk-publikasi"
      },

      // Assessment (baseline)
      {
        title:"Pelaksanaan Pretest",
        date:"2025-03-05",
        category:"Assessment",
        excerpt:"Pengukuran awal (baseline) literasi, numerasi, dan atensi sebagai dasar intervensi.",
        image:"/img/berita-pretest.jpg",
        slug:"pelaksanaan-pretest"
      },

      // Pelatihan/Pendampingan eksternal
      {
        title:"Pendampingan PKM PTMA Tahun 2025",
        date:"2025-03-10",
        category:"Pelatihan",
        excerpt:"Klinik proposal, asistensi administrasi, dan strategi monitoring dampak kegiatan.",
        image:"/img/berita-pkm-ptma.jpg",
        slug:"pendampingan-pkm-ptma-2025"
      },

      // Pembelajaran (implementasi di kelas)
      {
        title:"Sesi Menara Focus",
        date:"2025-03-15",
        category:"Pembelajaran",
        excerpt:"Latihan atensi berkelanjutan, kontrol impuls, dan kerja sama melalui Menara Focus.",
        image:"/img/berita-menara-focus.jpg",
        slug:"sesi-menara-focus"
      },
      {
        title:"Number Board di Kelas",
        date:"2025-03-18",
        category:"Pembelajaran",
        excerpt:"Menguatkan urutan, pola, dan operasi sederhana dengan papan angka bertingkat.",
        image:"/img/berita-number-board.jpg",
        slug:"number-board-di-kelas"
      },
      {
        title:"Book Story Time",
        date:"2025-03-20",
        category:"Pembelajaran",
        excerpt:"Membangun kosa kata dan pemahaman bacaan melalui sesi membaca terpandu.",
        image:"/img/berita-storytime.jpg",
        slug:"book-story-time"
      },
      {
        title:"Find Word & Number",
        date:"2025-03-22",
        category:"Pembelajaran",
        excerpt:"Gim mencari kata/angka untuk melatih fokus visual dan pencocokan pola.",
        image:"/img/berita-find-word-number.jpg",
        slug:"find-word-dan-number"
      },
      {
        title:"Game Zyland di SDN Wiropaten",
        date:"2025-03-25",
        category:"Pembelajaran",
        excerpt:"Petualangan edukasi bertema Computational Thinking dengan misi per level.",
        image:"/img/berita-game-zyland.jpg",
        slug:"game-zyland-di-sdn-wiropaten"
      },

      // Teknologi
      {
        title:"Penerapan Zymath AR dalam Pembelajaran",
        date:"2025-03-28",
        category:"Teknologi",
        excerpt:"Uji coba marker, kalibrasi perangkat, dan integrasi Zymath AR ke lembar kerja.",
        image:"/img/berita-zymath-ar.jpg",
        slug:"penerapan-zymath-ar"
      }
    ];

    // Helpers
    const bulan = ["Jan","Feb","Mar","Apr","Mei","Jun","Jul","Agu","Sep","Okt","Nov","Des"];
    const fmtDate = iso => {
      const d = new Date(iso);
      return String(d.getDate()).padStart(2,"0")+" "+bulan[d.getMonth()]+" "+d.getFullYear();
    };

    // State
    let state = { q:"", cat:"Semua", sort:"newest", shown:6 };

    // DOM
    const grid = document.getElementById('grid');
    const empty = document.getElementById('empty');
    const resultCount = document.getElementById('resultCount');
    const search = document.getElementById('search');
    const sort = document.getElementById('sort');
    const loadMore = document.getElementById('loadMore');
    const chips = Array.from(document.querySelectorAll('.chip'));

    // Filter + Sort
    const getFiltered = () => {
      let items = NEWS.slice();
      if(state.cat !== "Semua") items = items.filter(n => n.category === state.cat);
      if(state.q.trim()){
        const q = state.q.toLowerCase();
        items = items.filter(n => n.title.toLowerCase().includes(q) || n.excerpt.toLowerCase().includes(q));
      }
      items.sort((a,b) => {
        const da = new Date(a.date).getTime();
        const db = new Date(b.date).getTime();
        return state.sort === "newest" ? db - da : da - db;
      });
      return items;
    };

    // Render grid
    const render = () => {
      const all = getFiltered();
      resultCount.textContent = all.length;

      if(all.length === 0){
        grid.innerHTML = "";
        empty.classList.remove('hidden');
        loadMore.classList.add('hidden');
        return;
      } else {
        empty.classList.add('hidden');
      }

      const slice = all.slice(0, state.shown);
      loadMore.classList.toggle('hidden', state.shown >= all.length);

      grid.innerHTML = slice.map(n => `
        <article class="reveal show bg-white border border-gray-100 rounded-2xl overflow-hidden hover:shadow-xl transition group card-hover">
          <a href="/berita/${n.slug}">
            <div class="card-media h-44 sm:h-48">
              <img src="${n.image}" alt="${n.title}" loading="lazy"
                   class="w-full h-full object-cover transition-transform duration-500 ease-out group-hover:scale-105"/>
            </div>
          </a>
          <div class="p-5">
            <div class="flex items-center justify-between">
              <span class="text-xs text-gray-500">${fmtDate(n.date)}</span>
              <span class="text-[11px] px-2 py-1 rounded-full bg-yellow-50 text-yellow-700 border border-yellow-200">${n.category}</span>
            </div>
            <h3 class="mt-2 font-semibold text-gray-900">
              <a href="/berita/${n.slug}" class="hover:underline">${n.title}</a>
            </h3>
            <p class="mt-2 text-sm text-gray-600">${n.excerpt}</p>
            <div class="mt-3">
              <a href="/berita/${n.slug}" class="inline-flex items-center gap-2 text-sm font-semibold" style="color: var(--primary);">
                Baca selengkapnya <i class="fas fa-arrow-right text-xs"></i>
              </a>
            </div>
          </div>
        </article>
      `).join('');
    };

    // Events
    const debounce = (fn, ms=250) => { let t; return (...args) => { clearTimeout(t); t=setTimeout(()=>fn(...args), ms);} };
    search.addEventListener('input', debounce((e)=>{ state.q = e.target.value || ""; state.shown = 6; render(); }, 200));
    sort.addEventListener('change', e => { state.sort = e.target.value; render(); });
    chips.forEach(ch => {
      ch.addEventListener('click', ()=>{
        chips.forEach(c => c.classList.remove('chip-active'));
        ch.classList.add('chip-active');
        state.cat = ch.dataset.cat;
        state.shown = 6;
        render();
      });
    });
    loadMore.addEventListener('click', ()=>{ state.shown += 6; render(); });

    // Reveal on load
    document.querySelectorAll('.reveal').forEach(el => el.classList.add('show'));

    // First render
    render();
  </script>
</body>
</html>
