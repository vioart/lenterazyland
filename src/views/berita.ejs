      <!-- Load more -->
      <div class="mt-8 text-center">
        <button id="loadMore" class="hidden inline-flex items-center gap-2 text-sm font-semibold px-4 py-2.5 rounded-xl border border-gray-200 hover:bg-gray-50 transition">
          Muat lebih banyak
          <i class="fas fa-chevron-down text-xs"></i>
        </button>
      </div>
    </div>
  </main>

  <!-- Footer -->
