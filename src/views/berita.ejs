  <!-- Main -->
  <main class="py-10 sm:py-14">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Title + Controls -->
      <div class="reveal show flex flex-col gap-6">
        <div>
