                <button class="chip text-xs px-3 py-2 rounded-lg border border-gray-200 whitespace-nowrap" data-cat="Koordinasi">Koordinasi</button>
                <button class="chip text-xs px-3 py-2 rounded-lg border border-gray-200 whitespace-nowrap" data-cat="Sosialisasi">Sosialisasi</button>
                <button class="chip text-xs px-3 py-2 rounded-lg border border-gray-200 whitespace-nowrap" data-cat="Assessment">Assessment</button>
                <button class="chip text-xs px-3 py-2 rounded-lg border border-gray-200 whitespace-nowrap" data-cat="Pembelajaran">Pembelajaran</button>
                <button class="chip text-xs px-3 py-2 rounded-lg border border-gray-200 whitespace-nowrap" data-cat="Pelatihan">Pelatihan</button>
                <button class="chip text-xs px-3 py-2 rounded-lg border border-gray-200 whitespace-nowrap" data-cat="Administrasi">Administrasi</button>
                <button class="chip text-xs px-3 py-2 rounded-lg border border-gray-200 whitespace-nowrap" data-cat="Teknologi">Teknologi</button>
